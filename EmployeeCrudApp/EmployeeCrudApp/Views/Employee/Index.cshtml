@model IEnumerable<Employee>

<h2>Employee List</h2>

<a href="/Employee/Create">Add New Employee</a>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>State</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Salary</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.Gender</td>
                <td>@emp.State</td>
                <td>@emp.Address</td>
                <td>@emp.Phone</td>
                <td>@emp.Salary</td>
                <td>@emp.Email</td>
                <td>
                    <a href="/Employee/Edit/@emp.Id">Edit</a> |
                    <a href="/Employee/Delete/@emp.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>