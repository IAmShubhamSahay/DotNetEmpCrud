@model IEnumerable<EmployeeCrudApp.Models.Employee>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="mb-4">Employee List</h2>

    <a class="btn btn-primary mb-3" asp-action="Create">Add New Employee</a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Gender</th>
                <th>Street Address</th>
                <th>City</th>
                <th>State</th>
                <th>Country</th>
                <th>Pincode</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>Email</th>
                <th>Date of Birth</th>
                <th>Date of Joining</th>
                <th>Marital Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Name</td>
                    <td>@emp.Surname</td>
                    <td>@emp.Gender</td>
                    <td>@emp.StreetAddress</td>
                    <td>@emp.City</td>
                    <td>@emp.State</td>
                    <td>@emp.Country</td>
                    <td>@emp.Pincode</td>
                    <td>@emp.Phone</td>
                    <td>₹ @emp.Salary.ToString("N2")</td>
                    <td>@emp.Email</td>
                    <td>@emp.DateOfBirth.ToString("yyyy-MM-dd")</td>
                    <td>@emp.DateOfJoining.ToString("yyyy-MM-dd")</td>
                    <td>@emp.MaritalStatus</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@emp.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@emp.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
