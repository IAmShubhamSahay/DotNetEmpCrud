@model EmployeeCrudApp.Models.Employee

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2>Delete Employee</h2>

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete the employee <strong>@Model.Name @Model.Surname</strong>?</h4>
        <p>Gender: @Model.Gender</p>
        <p>State: @Model.State</p>
        <p>Email: @Model.Email</p>
        <p>Phone: @Model.Phone</p>
        <p>Salary: ₹ @Model.Salary.ToString("N2")</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
